      function buildUrl(url, parameters) {
        var qs = "";
        for (var key in parameters) {
          var value = parameters[key];
          qs += "=" + encodeURIComponent(value) + "&";
        }
        if (qs.length > 0) {
          qs = qs.substring(0, qs.length - 1);
          url = url + "?" + qs;
        }
        return url;
      }

      // example:
      var url = "/api/query/";

      var parameters = {
        query: query
      };

      document.write(buildUrl(url, parameters));
    });
